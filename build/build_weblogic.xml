	<!-- Deletes the build and install directories. -->
	<target name="clean" depends="-init" description="Deletes the contents of the install and build directories.">
		<echo message="Deleting:" />
		<echo message="  ${dynamo.root.dir}/${module.name}" />
		<delete dir="${dynamo.root.dir}/${module.name}" failonerror="false" includeEmptyDirs="true"/>
		<delete dir="${dynamo.root.dir}/atgpatch" failonerror="false" includeEmptyDirs="true"/>
		<delete dir="${build.root.dir}" />
		<mkdir dir="${build.root.dir}" />
	</target>
	
	<target name="cwallet-checks-pre">
			<available file="${weblogic.home}/application/${weblogic.server}/${module.name}.ear/atg_bootstrap.war/WEB-INF/ATG-INF/home/security/cwallet.sso"  property="backupfile.found"/>
	</target>
		
		<target name="cwallet-backup" if="backupfile.found">
				<echo message="Taking Backup of CWallet" />
				   <mkdir dir="tmp"/>
				<copy todir="tmp/" overwrite="true">
					<fileset dir="${weblogic.home}/application/${weblogic.server}/${module.name}.ear/atg_bootstrap.war/WEB-INF/ATG-INF/home/security">
					<include name="cwallet.sso"/>
					</fileset>
				</copy>
				<echo message="Backup done...." />
		</target>

		<target name="cwallet-checks-post">
			<available file="tmp/cwallet.sso"  property="copyfile.found"/>
		</target>
		
		<target name="cwallet-copy" if="copyfile.found">
		
			<echo message="Copying CWallet" />
				<copy todir="${weblogic.home}/application/${weblogic.server}/${module.name}.ear/atg_bootstrap.war/WEB-INF/ATG-INF/home/security/" overwrite="true">
					<fileset dir="tmp">
					<include name="cwallet.sso"/>
					</fileset>
				</copy>
				<echo message="Copying Done" />
		</target>
		
	<target name="clean-artifacts" depends="cwallet-checks-pre,cwallet-backup" description="Deletes old build artifacts.">
		<echo message="Deleting:" />
		<echo message="  ${weblogic.home}/application/${weblogic.server}/${module.name}.ear" />
		<echo message="  ${weblogic.home}/application/${weblogic.server}/${module.name}.ear.tar.gz" />
